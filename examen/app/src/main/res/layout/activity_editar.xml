<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditarActivity">

    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_actualizar" app:layout_constraintStart_toEndOf="@+id/button_cancelar2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="103dp"
            app:layout_constraintHorizontal_bias="0.875" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/precio_editar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="124dp"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancelar2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/precio_editar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="124dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/id_editar" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/desc_editar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_editar" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/m2_editar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/desc_editar" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/precio_editar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/m2_editar" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_eliminar" app:layout_constraintEnd_toEndOf="@+id/button_actualizar"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/button_cancelar2"
            android:layout_marginStart="8dp" android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.474"/>
</android.support.constraint.ConstraintLayout>